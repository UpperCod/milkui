{
  "include": ["packages/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "atomico",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "paths": {
      "@milkui/react-*": ["packages/react/*/src"],
      "@milkui/*": ["packages/core/*/src"]
    }
  }
}
